<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corners_alert_body">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/round_corners_orange_alert_title">
        <iis.production.musingo.objects.TextViewPacifico
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="#000000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <iis.production.musingo.objects.TextViewArchitects
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text=""
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="#000000"/>
        <iis.production.musingo.objects.TextViewArchitects
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="5dp"
            android:text="GOT IT"
            android:background="#3fb8cd"
            android:gravity="center_horizontal"
            android:textColor="#000000"/>
        <ImageView
            android:id="@+id/button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/green_button"/>
        <iis.production.musingo.objects.TextViewArchitects
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="5dp"
            android:text="GOT IT"
            android:gravity="center_horizontal"
            android:textColor="#000000"/>

        <iis.production.musingo.objects.TextViewArchitects
            android:id="@+id/laterRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="15dp"
            android:text="Not now"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>