                    <ImageView
                        android:id="@+id/nextPackage"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/right_arrow"
                        android:layout_alignParentBottom="true"/>
                    </LinearLayout>

                    <LinearLayout
