    <RelativeLayout
        android:id="@+id/dropDown"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:onClick="dropDown"
        android:background="@drawable/round_corners_drop_menu"
        android:layout_alignParentRight="true">
        <LinearLayout
            android:id="@+id/orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/orangeStar"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/star_beat"/>
            <iis.production.musingo.objects.TextViewArchitects
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginLeft="3dp"
                android:text="BEAT"
                android:gravity="center_vertical"
                android:layout_toRightOf="@id/orangeStar"
                android:layout_gravity="center_vertical"
                android:textColor="#ffffff"
                style="@style/Shadow"/>
            </LinearLayout>
        <LinearLayout
            android:id="@+id/green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:layout_below="@id/orange">
            <ImageView
                android:id="@+id/greenStar"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/star_complete"/>
            <iis.production.musingo.objects.TextViewArchitects
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginLeft="3dp"
                android:text="COMPLETE"
                android:layout_toRightOf="@id/greenStar"
                android:layout_gravity="center_vertical"
                android:textColor="#ffffff"
                style="@style/Shadow"/>
            </LinearLayout>

        <LinearLayout
            android:id="@+id/purple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:layout_below="@id/green">
            <ImageView
                android:id="@+id/purpleStar"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:gravity="center_vertical"
                android:src="@drawable/star_boost"/>
            <iis.production.musingo.objects.TextViewArchitects
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="POWERUP"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/purpleStar"
                android:layout_gravity="center_vertical"
                android:textColor="#ffffff"
                style="@style/Shadow"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/arrow"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/arrow_down"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#3fb8cd">
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="80dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:onClick="goBackButton"
            android:src="@drawable/back_button"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <iis.production.musingo.objects.TextViewPacifico
                android:id="@+id/barTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="Playlists"
                android:layout_centerInParent="true"
                android:textColor="#ffffff"
                style="@style/Shadow"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_alignParentRight="true">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/multicolor_star"/>
                <iis.production.musingo.objects.TextViewPacifico
                    android:id="@+id/starNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:text="22"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#ffffff"
                    style="@style/Shadow"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/loadingAnimation"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#cccccccc"
        android:visibility="gone">
        <ProgressBar
            android:id="@+id/animationLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleLarge"
            android:indeterminate="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/unlock_now"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:src="@drawable/unlock_now"
        android:visibility="gone"
        android:layout_below="@id/packageUnlock"
        android:onClick="unlockPackage"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tutorial1Package"
        android:onClick="nextTutorial"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:id="@+id/tutorial1PackageArrow"
            android:src="@drawable/tutorial_arrow_up"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tutorial_background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <iis.production.musingo.objects.TextViewArchitects
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:text="@string/tutorial1Package"
                android:id="@+id/textView"
                android:textColor="#000"/>

            <iis.production.musingo.objects.TextViewArchitects
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="5dp"
                android:text="@string/tap_for_next"
                android:id="@+id/textView"
                android:textColor="#000"
                android:textSize="10sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tutorial2Package"
        android:layout_marginTop="160dp"
        android:onClick="nextTutorial"
        android:layout_alignParentRight="true"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="35dp"
            android:id="@+id/tutorial2PackageArrow"
            android:src="@drawable/tutorial_arrow_up"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tutorial_background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <iis.production.musingo.objects.TextViewArchitects
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:text="@string/tutorial2Package"
                android:id="@+id/textView"
                android:textColor="#000"/>

            <iis.production.musingo.objects.TextViewArchitects
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="5dp"
                android:text="@string/tap_for_next"
                android:id="@+id/textView"
                android:textColor="#000"
                android:textSize="10sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tutorial3Package"
        android:onClick="nextTutorial"
        android:visibility="gone"
        android:layout_centerInParent="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tutorial_background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <iis.production.musingo.objects.TextViewArchitects
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:text="@string/tutorial3Package"
                android:id="@+id/textView"
                android:textColor="#000"/>

            <iis.production.musingo.objects.TextViewArchitects
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="5dp"
                android:text="@string/tap_for_next"
                android:id="@+id/textView"
                android:textColor="#000"
                android:textSize="10sp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tutorial3PackageArrow"
            android:src="@drawable/tutorial_arrow_bottom"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/progressBarHandler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <iis.production.musingo.objects.TextViewPacifico
            android:id="@+id/songsLoaded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            style="@style/Shadow"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:id="@+id/packagesList"
        android:layout_alignParentBottom="true"
